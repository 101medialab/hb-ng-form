{
  "name": "hb-ng-form",
  "version": "0.0.1-build0014",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "author": "tom.lo@101medialab.com",
  "bugs": {
    "url": "https://github.com/101medialab/hb-ng-form/issues"
  },
  "scripts": {
    "cleanup": "rimraf ./**/*.ngfactory.ts ./**/*.ngstyle.ts ./**/*.ngsummary.json dist",
    "ngc": "ngc -p tsconfig.json",
    "build": "npm run cleanup && npm run ngc && npm t",
    "dev": "npm run cleanup && NODE_ENV=dev node_modules/.bin/webpack --config webpack.config.js --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@angular/animations": "^5.2.10",
    "@angular/cdk": "^5.2.5",
    "@angular/common": "^5.2.10",
    "@angular/compiler": "^5.2.10",
    "@angular/compiler-cli": "^5.2.10",
    "@angular/core": "^5.2.10",
    "@angular/forms": "^5.2.10",
    "@angular/material": "^5.2.5",
    "@angular/platform-browser": "^5.2.10",
    "@angular/platform-browser-dynamic": "^5.2.10",
    "@angular/router": "^5.2.10",
    "angular2-template-loader": "^0.6.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "hammerjs": "^2.0.8",
    "hb-ng-sdk": "git+https://github.com/101medialab/angular-sdk.git",
    "html-loader": "^0.5.1",
    "rxjs": "^5.5.2",
    "typescript": "2.4.2",
    "webpack": "^3.8.1",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/jquery": "^3.2.16",
    "@types/node": "^8.0.53",
    "awesome-typescript-loader": "^3.4.0",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.7",
    "jest": "^21.2.1",
    "jest-preset-angular": "^4.0.1",
    "jquery": "^3.2.1",
    "node-sass": "^4.7.2",
    "optimize-js-plugin": "0.0.4",
    "rimraf": "2.6.2",
    "sass-loader": "^6.0.6",
    "selectize": "^0.12.4",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.2.3",
    "webpack-livereload-plugin": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/101medialab/hb-ng-form.git"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true,
        "tsConfigFile": "src/tsconfig.spec.json"
      }
    },
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.js",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!hb-ng-sdk)"
    ],
    "transform": {
      "^.+\\.(ts|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    }
  }
}
