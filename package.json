{
  "name": "hb-ng-form",
  "version": "0.0.1-build0003",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "author": "tom.lo@101medialab.com",
  "bugs": {
    "url": "https://github.com/101medialab/hb-ng-form/issues"
  },
  "scripts": {
    "cleanup": "rimraf ./**/*.ngfactory.ts ./**/*.ngstyle.ts ./**/*.ngsummary.json dist",
    "ngc": "ngc -p tsconfig.json",
    "build": "npm run cleanup && npm run ngc && npm t",
    "dev": "npm run cleanup && NODE_ENV=dev node_modules/.bin/webpack --config webpack.config.js --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/cdk": "^5.0.4",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/material": "^5.0.4",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "angular2-template-loader": "^0.6.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-loader": "^0.5.4",
    "rxjs": "^5.5.6",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/jquery": "^3.2.18",
    "@types/node": "^9.3.0",
    "awesome-typescript-loader": "^3.4.1",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.9",
    "jest": "^22.1.2",
    "jest-preset-angular": "^5.0.0",
    "jquery": "^3.2.1",
    "node-sass": "^4.7.2",
    "optimize-js-plugin": "0.0.4",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "selectize": "^0.12.4",
    "style-loader": "^0.19.1",
    "ts-jest": "^22.0.1",
    "webpack-livereload-plugin": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/101medialab/hb-ng-form.git"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true,
        "tsConfigFile": "src/tsconfig.spec.json"
      }
    },
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.js",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!hb-ng-sdk)"
    ],
    "transform": {
      "^.+\\.(ts|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    }
  }
}
